{
    "name": "thephpleague/database",
    "type": "library",
    "description": "PHP library and ORM to handle DB connection, apply C.R.U.D. operations",
    "keywords": [
        "thephpleague",
        "database",
        "mysql",
        "postgres"
    ],
    "homepage": "https://github.com/thephpleague/database",
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Podgornyy",
            "email": "sergey.podgornyy@yahoo.de",
            "homepage": "http://larapulse.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.0",
        "ext-pdo": "*",
        "larapulse/support": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~6.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "League\\Database\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "League\\Database\\Tests\\": "tests/Tests",
            "League\\Database\\Performance\\": "tests/Performance"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
